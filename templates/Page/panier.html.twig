{% extends 'base.html.twig' %}

{% block title %}{# Titre de la page #}Mon Panier - CreaSelf{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/panier.css') }}">
{% endblock %}

{% block body %}
<div>
    <div>
        <h1>
            <i class="fas fa-shopping-cart"></i>
            Mon Panier
        </h1>
    </div>

    {% if panier.is_empty is defined and panier.is_empty %}{# Si le panier est vide #}
        {# Panier vide #}
        <div>
            <i class="fa-solid fa-basket-shopping"></i>
            <h2>Votre panier est vide</h2>
            <p>D√©couvrez nos d√©licieux cookies et boxes gourmandes !</p>
            <a href="{{ path('app_home') }}">
                <i class="fas fa-arrow-left"></i>
                Retour √† la boutique
            </a>
        </div>
    {% else %}{# Si le panier contient des articles #}
        {# Panier avec articles #}
        <div>
            {# Liste des articles #}
            <div>
                {# Panier BDD (utilisateur connect√©) #}
                {% if panier.lignes is defined %}{# Si panier depuis base de donn√©es #}
                    {% for ligne in panier.lignes %}{# Boucle sur les lignes du panier BDD #}
                        <div>
                            {% if ligne.produit is defined %}{# Si ligne contient un produit simple #}
                                {% set image_path = ligne.produit.image %}
                                {% set folder = 'produits' %}
                            {% else %}{# Si ligne contient une box #}
                                {% set image_path = ligne.box.image %}
                                {% set folder = 'boxes' %}
                            {% endif %}
                            
                            <img src="{{ asset('uploads/' ~ folder ~ '/' ~ image_path) }}" 
                                 alt="{{ ligne.nom_article }}"
                                 onerror="this.src='/images/placeholder.jpg'">

                            <div>
                                <div>{# Nom de l'article #}{{ ligne.nom_article }}</div>
                                <div>
                                    {% if ligne.produit is defined %}{# Type: Cookie #}
                                        Cookie
                                    {% elseif ligne.is_box_perso %}{# Type: Box personnalis√©e #}
                                        Box Personnalis√©e
                                    {% else %}{# Type: Box fixe #}
                                        Box {{ ligne.box.type|capitalize }}
                                    {% endif %}
                                </div>

                                {# Composition pour box perso #}
                                {% if ligne.is_box_perso and ligne.compositions is defined %}{# Si box perso avec composition #}
                                    <div>
                                        <h4>üì¶ Composition :</h4>
                                        <div>
                                            {% for compo in ligne.compositions %}{# Boucle sur les cookies de la box perso #}
                                                <span>
                                                    {# Quantit√© et nom du cookie #}{{ compo.quantite }}x {{ compo.produit.name }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}

                                <div>
                                    {# Prix unitaire √ó quantit√© #}{{ ligne.prix_unitaire|number_format(2, ',', ' ') }} ‚Ç¨ √ó {{ ligne.quantite }}
                                </div>
                            </div>

                            <div>
                                <div>
                                    {# Sous-total de la ligne #}{{ ligne.sous_total|number_format(2, ',', ' ') }} ‚Ç¨
                                </div>

                                {% if not ligne.is_box_perso %}{# Contr√¥les de quantit√© (sauf box perso) #}
                                    {# Contr√¥les de quantit√© #}
                                    {% set item_type = ligne.produit is defined ? 'produit' : 'box' %}
                                    <form method="POST" action="{{ path('app_panier_modifier', {type: item_type, id: ligne.id}) }}">
                                        <div>
                                            <button type="button" onclick="updateQty('qty_{{ ligne.id }}', -1, 1, 99)">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <input type="number" 
                                                   id="qty_{{ ligne.id }}"
                                                   name="quantite" 
                                                   value="{{ ligne.quantite }}" 
                                                   min="1" 
                                                   onchange="this.form.submit()">
                                            <button type="button" onclick="updateQty('qty_{{ ligne.id }}', 1, 1, 99)">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </form>
                                {% else %}{# Affichage quantit√© simple pour box perso #}
                                    <div>
                                        Quantit√© : {{ ligne.quantite }}
                                    </div>
                                {% endif %}

                                {# Bouton supprimer #}
                                {% set item_type = ligne.produit is defined ? 'produit' : 'box' %}
                                <form method="POST" action="{{ path('app_panier_retirer', {type: item_type, id: ligne.id}) }}" onsubmit="return confirm('Supprimer cet article ?')">
                                    <button type="submit">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                {# Panier Session (visiteur) - Produits #}
                {% if panier.produits is defined %}{# Si produits en session #}
                    {% for item in panier.produits %}{# Boucle sur les produits session #}
                        <div>
                            <img src="{{ asset('uploads/produits/' ~ item.produit.image) }}" 
                                 alt="{{ item.produit.name }}"
                                 onerror="this.src='/images/placeholder.jpg'">

                            <div>
                                <div>{# Nom du produit #}{{ item.produit.name }}</div>
                                <div>Cookie</div>
                                <div>
                                    {# Prix √ó quantit√© #}{{ item.produit.prix|number_format(2, ',', ' ') }} ‚Ç¨ √ó {{ item.quantite }}
                                </div>
                            </div>

                            <div>
                                <div>
                                    {# Sous-total calcul√© #}{{ (item.produit.prix * item.quantite)|number_format(2, ',', ' ') }} ‚Ç¨
                                </div>

                                <form method="POST" action="{{ path('app_panier_modifier', {type: 'produit', id: item.produit.id}) }}">
                                    <div>
                                        <button type="button" onclick="updateQty('qty_prod_{{ item.produit.id }}', -1, 1, 99)">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" 
                                               id="qty_prod_{{ item.produit.id }}"
                                               name="quantite" 
                                               value="{{ item.quantite }}" 
                                               min="1" 
                                               onchange="this.form.submit()">
                                        <button type="button" onclick="updateQty('qty_prod_{{ item.produit.id }}', 1, 1, 99)">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </form>

                                <form method="POST" action="{{ path('app_panier_retirer', {type: 'produit', id: item.produit.id}) }}" onsubmit="return confirm('Supprimer cet article ?')">
                                    <button type="submit">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                {# Panier Session - Boxes fixes #}
                {% if panier.boxes is defined %}{# Si boxes fixes en session #}
                    {% for item in panier.boxes %}{# Boucle sur les boxes session #}
                        <div>
                            <img src="{{ asset('uploads/boxes/' ~ item.box.image) }}" 
                                 alt="{{ item.box.nom }}"
                                 onerror="this.src='/images/placeholder.jpg'">

                            <div>
                                <div>{# Nom de la box #}{{ item.box.nom }}</div>
                                <div>{# Type de box capitalis√© #}Box {{ item.box.type|capitalize }}</div>
                                <div>
                                    {# Prix √ó quantit√© #}{{ item.box.prix|number_format(2, ',', ' ') }} ‚Ç¨ √ó {{ item.quantite }}
                                </div>
                            </div>

                            <div>
                                <div>
                                    {# Sous-total calcul√© #}{{ (item.box.prix * item.quantite)|number_format(2, ',', ' ') }} ‚Ç¨
                                </div>

                                <form method="POST" action="{{ path('app_panier_modifier', {type: 'box', id: item.box.id}) }}">
                                    <div>
                                        <button type="button" onclick="updateQty('qty_box_{{ item.box.id }}', -1, 1, 99)">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" 
                                               id="qty_box_{{ item.box.id }}"
                                               name="quantite" 
                                               value="{{ item.quantite }}" 
                                               min="1" 
                                               onchange="this.form.submit()">
                                        <button type="button" onclick="updateQty('qty_box_{{ item.box.id }}', 1, 1, 99)">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </form>

                                <form method="POST" action="{{ path('app_panier_retirer', {type: 'box', id: item.box.id}) }}" onsubmit="return confirm('Supprimer cet article ?')">
                                    <button type="submit">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                {# Panier Session - Boxes perso #}
                {% if panier.boxes_perso is defined %}{# Si boxes perso en session #}
                    {% for item in panier.boxes_perso %}{# Boucle sur les boxes perso session #}
                        <div>
                            <img src="{{ asset('uploads/boxes/' ~ item.box.image) }}" 
                                 alt="Box Personnalis√©e"
                                 onerror="this.src='/images/placeholder.jpg'">

                            <div>
                                <div>Box Personnalis√©e</div>
                                <div>Box Personnalis√©e</div>

                                <div>
                                    <h4>üì¶ Composition :</h4>
                                    <div>
                                        {% for produit_id, qty in item.composition %}{# Boucle sur la composition de la box perso #}
                                            <span>
                                                {# Quantit√© √ó ID produit #}{{ qty }}x Produit #{{ produit_id }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div>
                                    {# Prix de la box perso #}{{ item.box.prix|number_format(2, ',', ' ') }} ‚Ç¨
                                </div>
                            </div>

                            <div>
                                <div>
                                    {# Prix de la box perso #}{{ item.box.prix|number_format(2, ',', ' ') }} ‚Ç¨
                                </div>

                                <div>
                                    Quantit√© : 1
                                </div>

                                <form method="POST" action="{{ path('app_panier_retirer', {type: 'box_perso', id: loop.index0}) }}" onsubmit="return confirm('Supprimer cette box ?')">
                                    <button type="submit">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            {# R√©sum√© du panier #}
            <div>
                <h3>R√©sum√© de la commande</h3>

                <div>
                    <span>Articles ({# Nombre total d'articles #}{{ panier.nombre_articles ?? 0 }})</span>
                    <span>{# Total du panier #}{{ panier.total|number_format(2, ',', ' ') }} ‚Ç¨</span>
                </div>

                <div>
                    <span>Livraison</span>
                    <span>Gratuite</span>
                </div>

                <div>
                    <span>Total</span>
                    <span>{# Total final du panier #}{{ panier.total|number_format(2, ',', ' ') }} ‚Ç¨</span>
                </div>

                <button type="button" onclick="alert('Fonctionnalit√© de commande √† venir !')">
                    <i class="fas fa-check"></i> Valider la commande
                </button>

                <form method="POST" action="{{ path('app_panier_vider') }}" onsubmit="return confirm('Vider tout le panier ?')">
                    <button type="submit">
                        <i class="fas fa-trash-alt"></i> Vider le panier
                    </button>
                </form>
            </div>
        </div>
    {% endif %}
</div>

<script>
function updateQty(inputId, delta, min, max) {
    const input = document.getElementById(inputId);
    let currentValue = parseInt(input.value) || min;
    let newValue = currentValue + delta;
    
    if (newValue >= min && newValue <= max) {
        input.value = newValue;
        input.form.submit();
    }
}
</script>
{% endblock %}

