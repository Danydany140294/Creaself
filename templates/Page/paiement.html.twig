{% extends 'base.html.twig' %}

{% block title %}
    {% if show_success_modal is defined and show_success_modal %}
        Paiement réussi - CreaSelf
    {% else %}
        Paiement - CreaSelf
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/paiement.css') }}">
{% endblock %}

{% block body %}

{# ========================================
   MODAL DE SUCCÈS (s'affiche uniquement si show_success_modal = true)
   ======================================== #}

{% if show_success_modal is defined and show_success_modal %}
    <div class="modal-overlay" id="successModal">
        <!-- Confettis -->
        <div class="confetti"></div>
        <div class="confetti"></div>
        <div class="confetti"></div>
        <div class="confetti"></div>
        <div class="confetti"></div>
        <div class="confetti"></div>
        <div class="confetti"></div>
        <div class="confetti"></div>
        <div class="confetti"></div>

        <div class="modal-container">
            <!-- Icône de succès -->
            <div class="success-icon-wrapper">
                <div class="success-icon">
                    <i class="fas fa-check"></i>
                </div>
            </div>

            <!-- Contenu -->
            <div class="modal-content">
                <h2>Merci <span>beaucoup</span> !</h2>
                
                <div class="order-number">
                    <span class="order-number-label">Votre commande</span>
                    <span class="order-number-value" id="orderNumberDisplay">
                        {{ commande.numero }}
                    </span>
                </div>

                <p class="confirmation-message">
                    <i class="fas fa-circle-check"></i>
                    Votre commande d'un montant de <strong>{{ commande.total|number_format(2, ',', ' ') }} €</strong> a été validée avec succès
                </p>

                {% if commande.email %}
                <div class="email-notice">
                    <p>
                        <i class="fas fa-envelope"></i>
                        Un email de confirmation vous a été envoyé à <strong>{{ commande.email }}</strong>
                    </p>
                </div>
                {% endif %}

                <!-- Boutons d'action -->
                <div class="modal-actions">
                    <a href="{{ path('app_home') }}" class="nc-btn nc-btn-primary">
                        <i class="fas fa-home"></i>
                        Retour à l'accueil
                    </a>
                    <a href="{{ path('app_produits') }}" class="nc-btn nc-btn-secondary">
                        <i class="fas fa-cookie-bite"></i>
                        Continuer mes achats
                    </a>
                </div>
            </div>
        </div>
    </div>

{% else %}

{# ========================================
   PAGE DE PAIEMENT NORMALE (si pas de modal)
   ======================================== #}

    <div class="container my-5">
        <h1>Page de paiement</h1>
        
        {# Ici votre contenu de paiement normal #}
        {# Formulaire Stripe, récapitulatif panier, etc. #}
        
        <div class="panier-recap">
            <h3>Récapitulatif</h3>
            <p>Total : {{ total_final|number_format(2, ',', ' ') }} €</p>
        </div>
        
        {# Votre formulaire de paiement Stripe ici #}
    </div>

{% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    {% if show_success_modal is defined and show_success_modal %}
        <script src="{{ asset('js/paiement.js') }}"></script>
        
        <script>
            // Afficher automatiquement la modal au chargement de la page
            document.addEventListener('DOMContentLoaded', function() {
                const modal = document.getElementById('successModal');
                if (modal) {
                    modal.style.display = 'flex';
                }
            });
        </script>
    {% endif %}
{% endblock %}
