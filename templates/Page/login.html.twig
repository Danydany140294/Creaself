<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - LOGIX</title>
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
</head>
<body>
    <a href="{{ path('app_home') }}" class="back-btn">BACK</a>
    
    <div class="container">
        <div class="floating-elements">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div class="form">
            <div class="logo">
    <a href="{{ path('app_home') }}">
        <img src="{{ asset('asset/perline.jpg') }}" alt="Logo" style="max-width: 150px; height: auto; border-radius: 10px;">
    </a>
</div>
            <form method="post" action="{{ path('app_login') }}">
                {% if error %}
                    <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}

                <div class="inputBox">
                    <input type="email" name="email" value="{{ last_username }}" required="required">
                    <span>Email</span>
                </div>
                <div class="inputBox">
                    <input type="password" name="password" required="required">
                    <span>Password</span>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="enter">LOGIN</button>
                
                <div class="links">
                    <a href="{{ path('app_forgot_password_request') }}">Forgot Password?</a>
                    <a href="{{ path('app_register') }}">Sign Up</a>
                </div>
            </form>
        </div>
    </div>

    <script src="{{ asset('js/login.js') }}"></script>
</body>
</html>