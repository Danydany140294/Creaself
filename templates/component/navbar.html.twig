    </div>
</div>

<!-- Overlay pour menu mobile -->
<div class="nav-overlay" id="navOverlay"></div>

<!-- Navbar -->
<nav class="navbar" id="mainNavbar">
    <!-- Logo mobile -->
    <a href="{{ path('app_home') }}" class="navbar-logo-mobile">
        <img src="{{ asset('asset/perline.jpg') }}" alt="Logo Premium Cookie Shop">
    </a>

    <!-- Menu de navigation -->
    <ul class="nav-links" id="navLinks">
        <li><a href="{{ path('app_quisommesnous') }}">Qui sommes nous ?</a></li>
        <li><a href="{{ path('app_produits') }}">Nos Cookies</a></li>
        <li><a href="{{ path('app_box') }}">Nos Box</a></li>
        <li><a href="{{ path('app_contact') }}">Contactez-nous</a></li>
        
        <!-- Section auth mobile -->
        <li class="mobile-auth-section">
            {% if app.user %}
                <div class="mobile-user-section">
                    <div class="mobile-user-header">
                        <i class="fas fa-user-circle"></i>
                        <div class="mobile-user-info">
                            <div class="user-name">{{ app.user.prenom }} {{ app.user.nom }}</div>
                            <div class="user-email">{{ app.user.email }}</div>
                        </div>
                    </div>
                    
                    <nav class="mobile-user-links">
                        <a href="{{ path('app_user_dashboard') }}">
                            <i class="fas fa-user-cog"></i>
                            <span>Mon profil</span>
                        </a>
                        <a href="{{ path('app_user_dashboard') }}#adresses">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Mes adresses</span>
                        </a>
                        <a href="{{ path('app_user_dashboard') }}#paiement">
                            <i class="fas fa-credit-card"></i>
                            <span>Moyens de paiement</span>
                        </a>
                        <a href="{{ path('app_user_dashboard') }}#commandes">
                            <i class="fas fa-box"></i>
                            <span>Mes commandes</span>
                        </a>
                        <a href="{{ path('app_logout') }}" class="logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>D√©connexion</span>
                        </a>
                    </nav>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}" class="mobile-login-btn">
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Se connecter</span>
                </a>
            {% endif %}
        </li>
    </ul>

    <!-- Boutons √† droite -->
    <div class="nav-buttons">
        <!-- Burger menu -->
        <button class="burger-menu" id="burgerMenu" aria-label="Menu de navigation" aria-expanded="false">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <!-- Panier -->
        <button class="btn-panier" id="btnPanier" type="button" aria-label="Voir le panier">
            <i class="fa-solid fa-basket-shopping"></i>
            <span>Panier</span>
            <span class="cart-badge" id="cartBadge">0</span>
        </button>

        <!-- Menu utilisateur desktop -->
        {% if app.user %}
            <div class="user-menu" id="userMenu">
                <button class="btn-user" aria-label="Menu utilisateur" aria-expanded="false">
                    <i class="fas fa-user-circle"></i>
                    <span>{{ app.user.prenom ?? 'Mon compte' }}</span>
                    <i class="fas fa-chevron-down"></i>
                </button>

                <div class="dropdown-menu" role="menu">
                    <div class="dropdown-header">
                        <div class="user-name">{{ app.user.prenom }} {{ app.user.nom }}</div>
                        <div class="user-email">{{ app.user.email }}</div>
                    </div>
                    
                    <a href="{{ path('app_user_dashboard') }}" class="dropdown-item">
                        <i class="fas fa-user-cog"></i>
                        <span>Mon profil</span>
                    </a>
                    <a href="{{ path('app_user_dashboard') }}#adresses" class="dropdown-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Mes adresses</span>
                    </a>
                    <a href="{{ path('app_user_dashboard') }}#paiement" class="dropdown-item">
                        <i class="fas fa-credit-card"></i>
                        <span>Moyens de paiement</span>
                    </a>
                    <a href="{{ path('app_user_dashboard') }}#commandes" class="dropdown-item">
                        <i class="fas fa-box"></i>
                        <span>Mes commandes</span>
                    </a>
                    <a href="{{ path('app_logout') }}" class="dropdown-item logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>D√©connexion</span>
                    </a>
                </div>
            </div>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn-login" aria-label="Se connecter">
                <i class="fas fa-sign-in-alt"></i>
                <span>Login</span>
            </a>
        {% endif %}
    </div>
</nav>

<!-- Logo Desktop -->
<div class="logo-section logo-desktop">
    <a href="{{ path('app_home') }}">
        <img src="{{ asset('asset/perline.jpg') }}" alt="Logo Premium Cookie Shop">
    </a>
</div>

<script src="{{ asset('js/navbar.js') }}"></script>