{# templates/user/mon_compte.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Compte - Perline{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/perline-dashboard.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="dashboard-wrapper">
    <div class="dashboard-container">
        <main class="dashboard-main">
            {# SIDEBAR - Menu de navigation #}
            <aside class="dashboard-sidebar">
                <div class="sidebar-content">
                    {# En-tête utilisateur #}
                    <div class="user-header">
                        <div class="user-avatar-wrapper">
                            <div class="user-avatar" style="background-image: url('{{ app.user.avatar ? asset('images/avatars/' ~ app.user.avatar) : asset('images/default-avatar.jpg') }}');"></div>
                            <div class="user-badge">
                                <span class="material-symbols-outlined">verified</span>
                            </div>
                        </div>
                        <div class="user-info">
                            <h1 class="user-name">{{ app.user.prenom }} {{ app.user.nom }}</h1>
                            <p class="user-title">Client Perline</p>
                        </div>
                    </div>

                    {# Navigation #}
                    <nav class="sidebar-nav">
                        <a href="#profil" class="nav-item active" data-tab="profil">
                            <span class="material-symbols-outlined">dashboard</span>
                            <span class="nav-text">Mon Profil</span>
                        </a>
                        <a href="#commandes" class="nav-item" data-tab="commandes">
                            <span class="material-symbols-outlined">shopping_bag</span>
                            <span class="nav-text">Mes Commandes</span>
                        </a>
                        <a href="#informations" class="nav-item" data-tab="informations">
                            <span class="material-symbols-outlined">badge</span>
                            <span class="nav-text">Mes Informations</span>
                        </a>
                        <a href="#adresses" class="nav-item" data-tab="adresses">
                            <span class="material-symbols-outlined">location_on</span>
                            <span class="nav-text">Mes Adresses</span>
                        </a>
                        <a href="#paiement" class="nav-item" data-tab="paiement">
                            <span class="material-symbols-outlined">credit_card</span>
                            <span class="nav-text">Moyens de Paiement</span>
                        </a>
                        <a href="#favoris" class="nav-item" data-tab="favoris">
                            <span class="material-symbols-outlined">favorite</span>
                            <span class="nav-text">Mes Favoris</span>
                        </a>
                        <a href="#avis" class="nav-item" data-tab="avis">
                            <span class="material-symbols-outlined">star_rate</span>
                            <span class="nav-text">Avis & Notes</span>
                        </a>
                        
                        <div class="nav-divider"></div>
                        
                        <a href="{{ path('app_logout') }}" class="nav-item logout-item">
                            <span class="material-symbols-outlined">logout</span>
                            <span class="nav-text">Déconnexion</span>
                        </a>
                    </nav>
                </div>
            </aside>

            {# CONTENU PRINCIPAL #}
            <div class="dashboard-content">
                {# En-tête de bienvenue #}
                <header class="content-header">
                    <h2 class="welcome-title">Bonjour {{ app.user.prenom }} !</h2>
                    <p class="welcome-subtitle">Heureux de vous revoir. Vos cookies vous attendent.</p>
                </header>

                {# ONGLET 1 : Mon Profil (Dashboard principal) #}
                <div id="tab-profil" class="tab-content active">
                    <div class="cards-grid">
                        {# Carte Dernière commande #}
                        <div class="card card-order">
                            <div class="card-body">
                                <div class="card-header-flex">
                                    <div>
                                        <h3 class="card-title">Dernière commande</h3>
                                        <p class="card-subtitle">N° 84920 — 14 Mars 2024</p>
                                    </div>
                                    <span class="badge badge-success">
                                        <span class="badge-dot"></span>
                                        Expédiée
                                    </span>
                                </div>
                                
                                <div class="order-preview">
                                    <div class="order-images">
                                        <img src="{{ asset('asset/images/produits/cookie-pistache-cannelle.png') }}" alt="Cookie 1" class="order-img">
                                        <img src="{{ asset('asset/images/produits/cookie-peche-caramel.png') }}" alt="Cookie 2" class="order-img">
                                        <div class="order-img-more">+2</div>
                                    </div>
                                    <div class="order-info">
                                        <p class="order-name">Boîte Signature & Pépites</p>
                                        <p class="order-delivery">Livraison prévue demain</p>
                                    </div>
                                </div>
                            </div>
                            
                            <button class="btn btn-primary btn-full">
                                <span class="material-symbols-outlined">local_shipping</span>
                                Suivre ma livraison
                            </button>
                            
                            <span class="card-icon-bg material-symbols-outlined">package</span>
                        </div>

                        {# Carte Points de fidélité #}
                        <div class="card card-loyalty">
                            <div class="card-body">
                                <div class="card-header-flex">
                                    <div>
                                        <h3 class="loyalty-title">Club Miettes d'Or</h3>
                                        <p class="loyalty-subtitle">Votre solde de gourmandise</p>
                                    </div>
                                    <span class="material-symbols-outlined loyalty-icon">loyalty</span>
                                </div>
                                
                                <div class="loyalty-points">
                                    <span class="points-number">{{ app.user.pointsFidelite }}</span>
                                    <span class="points-label">points</span>
                                </div>
                                
                                <div class="loyalty-reward">
                                    <p class="reward-label">RÉCOMPENSE DISPONIBLE</p>
                                    <div class="reward-card">
                                        <div class="reward-content">
                                            <span class="material-symbols-outlined">redeem</span>
                                            <span class="reward-text">1 Cookie Triple Chocolat OFFERT</span>
                                        </div>
                                        <button class="btn-reward">UTILISER</button>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="loyalty-progress">
                                <p class="progress-text">Prochain palier : 1500 pts</p>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: {{ (app.user.pointsFidelite / 1500 * 100)|number_format(0) }}%;"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Section Favoris #}
                    <section class="favorites-section">
                        <div class="section-header">
                            <h3 class="section-title">
                                <span class="material-symbols-outlined">favorite</span>
                                Vos Incontournables
                            </h3>
                            <div class="section-nav">
                                <button class="nav-btn" id="favPrev">
                                    <span class="material-symbols-outlined">chevron_left</span>
                                </button>
                                <button class="nav-btn" id="favNext">
                                    <span class="material-symbols-outlined">chevron_right</span>
                                </button>
                            </div>
                        </div>
                        
                        <div class="favorites-slider" id="favoritesSlider">
                            {% if app.user.favoris|length > 0 %}
                                {% for produit in app.user.favoris %}
                                    <div class="product-card">
                                        <div class="product-image">
                                            <img src="{{ asset('asset/images/produits/' ~ produit.image) }}" alt="{{ produit.name }}">
                                            <div class="product-overlay">
                                                <button class="btn-add" onclick="window.location.href='{{ path('app_panier_ajouter_produit', {id: produit.id}) }}'">Ajouter vite !</button>
                                            </div>
                                        </div>
                                        <h4 class="product-name">{{ produit.name }}</h4>
                                        <p class="product-price">{{ produit.prix|number_format(2, ',', ' ') }}€</p>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="empty-state">Vous n'avez pas encore de favoris. Explorez notre boutique !</p>
                            {% endif %}
                        </div>
                    </section>
                </div>

                {# ONGLET 2 : Mes Commandes #}
                <div id="tab-commandes" class="tab-content">
                    <div class="tab-inner">
                        <h3 class="tab-title">Mes Commandes</h3>
                        <p class="tab-description">Retrouvez l'historique de toutes vos commandes</p>
                        
                        {# Liste des commandes #}
                        <div class="orders-list">
                            {% if app.user.commandes|length > 0 %}
                                {% for commande in app.user.commandes %}
                                    <div class="order-item">
                                        <p>Commande #{{ commande.id }} - {{ commande.dateCommande|date('d/m/Y') }}</p>
                                        <p>Statut : {{ commande.statut }}</p>
                                        <p>Total : {{ commande.total|number_format(2, ',', ' ') }}€</p>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="empty-state">Vous n'avez pas encore passé de commande.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# ONGLET 3 : Mes Informations #}
                <div id="tab-informations" class="tab-content">
                    <div class="tab-inner">
                        <h3 class="tab-title">Mes Informations</h3>
                        <p class="tab-description">Gérez vos informations personnelles</p>
                        
                        {# Formulaire d'édition #}
                        <div class="info-form">
                            <div class="info-item">
                                <label>Email</label>
                                <p>{{ app.user.email }}</p>
                            </div>
                            <div class="info-item">
                                <label>Nom</label>
                                <p>{{ app.user.nom }}</p>
                            </div>
                            <div class="info-item">
                                <label>Prénom</label>
                                <p>{{ app.user.prenom }}</p>
                            </div>
                            <div class="info-item">
                                <label>Téléphone</label>
                                <p>{{ app.user.telephone ?? 'Non renseigné' }}</p>
                            </div>
                            <div class="info-item">
                                <label>Date de naissance</label>
                                <p>{{ app.user.dateNaissance ? app.user.dateNaissance|date('d/m/Y') : 'Non renseignée' }}</p>
                            </div>
                            <div class="info-item">
                                <label>Points de fidélité</label>
                                <p>{{ app.user.pointsFidelite }} points</p>
                            </div>
                        </div>
                    </div>
                </div>

                {# ONGLET 4 : Mes Adresses #}
                <div id="tab-adresses" class="tab-content">
                    <div class="tab-inner">
                        <h3 class="tab-title">Mes Adresses</h3>
                        <p class="tab-description">Gérez vos adresses de livraison</p>
                        
                        {# Liste des adresses #}
                        <div class="addresses-list">
                            {% if app.user.adresses|length > 0 %}
                                {% for adresse in app.user.adresses %}
                                    <div class="address-item {% if adresse.parDefaut %}default-address{% endif %}">
                                        <h4>{{ adresse.nom }}</h4>
                                        <p>{{ adresse.rue }}</p>
                                        {% if adresse.complement %}
                                            <p>{{ adresse.complement }}</p>
                                        {% endif %}
                                        <p>{{ adresse.codePostal }} {{ adresse.ville }}</p>
                                        <p>{{ adresse.pays }}</p>
                                        {% if adresse.parDefaut %}
                                            <span class="badge badge-success">Adresse par défaut</span>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="empty-state">Vous n'avez pas encore enregistré d'adresse.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# ONGLET 5 : Moyens de Paiement #}
                <div id="tab-paiement" class="tab-content">
                    <div class="tab-inner">
                        <h3 class="tab-title">Moyens de Paiement</h3>
                        <p class="tab-description">Gérez vos cartes bancaires</p>
                        
                        {# Liste des cartes #}
                        <div class="payment-methods">
                            <p class="empty-state">Fonctionnalité à venir...</p>
                        </div>
                    </div>
                </div>

                {# ONGLET 6 : Mes Favoris #}
                <div id="tab-favoris" class="tab-content">
                    <div class="tab-inner">
                        <h3 class="tab-title">Mes Favoris</h3>
                        <p class="tab-description">Vos cookies préférés</p>
                        
                        {# Liste des favoris #}
                        <div class="favorites-list">
                            {% if app.user.favoris|length > 0 %}
                                <div class="products-grid">
                                    {% for produit in app.user.favoris %}
                                        <div class="product-card">
                                            <div class="product-image">
                                                <img src="{{ asset('asset/images/produits/' ~ produit.image) }}" alt="{{ produit.name }}">
                                            </div>
                                            <h4 class="product-name">{{ produit.name }}</h4>
                                            <p class="product-price">{{ produit.prix|number_format(2, ',', ' ') }}€</p>
                                            <p class="product-stock">
                                                {% if produit.isEnStock() %}
                                                    ✓ En stock
                                                {% else %}
                                                    ✗ Rupture de stock
                                                {% endif %}
                                            </p>
                                            <button class="btn btn-primary" onclick="window.location.href='{{ path('app_panier_ajouter_produit', {id: produit.id}) }}'">
                                                Ajouter au panier
                                            </button>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="empty-state">Vous n'avez pas encore de favoris. Explorez notre boutique !</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# ONGLET 7 : Avis & Notes #}
                <div id="tab-avis" class="tab-content">
                    <div class="tab-inner">
                        <h3 class="tab-title">Avis & Notes</h3>
                        <p class="tab-description">Vos avis sur nos produits</p>
                        
                        {# Liste des avis #}
                        <div class="reviews-list">
                            {% if app.user.avis|length > 0 %}
                                {% for avis in app.user.avis %}
                                    <div class="review-item">
                                        <h4>{{ avis.produit.name }}</h4>
                                        <div class="stars">
                                            {% for i in 1..5 %}
                                                <span class="star {% if i <= avis.note %}filled{% endif %}">★</span>
                                            {% endfor %}
                                        </div>
                                        <p>{{ avis.commentaire }}</p>
                                        <p class="review-date">{{ avis.dateAvis|date('d/m/Y') }}</p>
                                        {% if avis.approuve %}
                                            <span class="badge badge-success">Publié</span>
                                        {% else %}
                                            <span class="badge badge-warning">En attente de validation</span>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="empty-state">Vous n'avez pas encore laissé d'avis.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/perline-dashboard.js') }}"></script>
{% endblock %}