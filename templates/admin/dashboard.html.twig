{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}

    <!-- Navbar fixe -->
   

    <!-- Contenu principal -->
    <div class="container-fluid mt-5 pt-4">

        <h1 class="mb-4">Bienvenue dans le Dashboard Admin CREASELF</h1>

        <div class="row mb-5 gy-4">

            <div class="col-md-4">
                <div class="card text-white bg-primary h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-people-fill fs-1 mb-3"></i>
                        <h5 class="card-title">{{ userCount }}</h5>
                        <p class="card-text">Utilisateurs totaux</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-success h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-shield-lock-fill fs-1 mb-3"></i>
                        <h5 class="card-title">{{ adminsCount }}</h5>
                        <p class="card-text">Administrateurs</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-info h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-person-fill fs-1 mb-3"></i>
                        <h5 class="card-title">{{ usersCount }}</h5>
                        <p class="card-text">Utilisateurs standards</p>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="mb-3">Répartition des rôles</h2>
        {# <div class="card p-2 mb-3">
            <canvas id="rolesChart" width="200" height="100"></canvas>
        </div> #}

        <h2 class="mb-3">Derniers utilisateurs</h2>
        <div class="card">
            <div class="card-header">
                Liste des derniers inscrits
            </div>
            <ul class="list-group list-group-flush">
                
                    <li class="list-group-item">Aucun utilisateur récent.</li>
               
            </ul>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('rolesChart').getContext('2d');
            const rolesChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Admins', 'Utilisateurs'],
                    datasets: [{
                        label: 'Répartition des rôles',
                        data: [{{ adminsCount }}, {{ usersCount }}],
                        backgroundColor: ['#28a745', '#17a2b8'],
                        borderColor: ['#1c7430', '#117a8b'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
